<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% options = options_from_collection_for_select(Transaction.select("DISTINCT(CATEGORY)"), 'id', 'category') %>


  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date, :value => Time.now.strftime('%Y-%m-%d') %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :all_val,  options, :value => ("Lunch") %>
  </div>

  <div class="field">
    <%= form.label :receipt %>
    <%= form.text_field :receipt %>
  </div>

  <div class="field">
    <%= form.label :owner_id %>
    <%= form.text_field :owner_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
