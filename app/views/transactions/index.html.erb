<h1>Transactions</h1>


<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Receipt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= render "qtdsum" %>

<%= render "form", transaction: Transaction.new %>

  <table id = "transaction_list" class="table table-striped">
    <% current_user.transactions.each do |transaction| %>

      <tr id="<%= dom_id(transaction) %>">
        <td><%= transaction.date %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.category %></td>
        <td><%= image_tag(transaction.receipt, size: 25) %></td>
        <td>
          <%= link_to edit_transaction_path(transaction), class: "btn btn-link" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
        <td>          
          <%= link_to transaction, method: :delete, remote: true, class: "btn btn-link" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>