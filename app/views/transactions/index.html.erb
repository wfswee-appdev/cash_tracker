<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Receipt</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% current_user.transactions.order(:date).each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.category %></td>
        <td><%= image_tag(transaction.receipt, size: 25) %></td>
        <td><%= transaction.owner.username %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
